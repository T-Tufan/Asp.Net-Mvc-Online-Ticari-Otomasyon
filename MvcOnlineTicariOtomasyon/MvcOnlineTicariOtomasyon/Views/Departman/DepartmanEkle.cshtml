@model MvcOnlineTicariOtomasyon.Models.Siniflar.Departman
@{
    ViewBag.Title = "DepartmanEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departman Ekleme Sayfası</h2>
<br />
<form class="form-group" action="/Departman/DepartmanEkle" method="post">
    @Html.Label("Departman Ad", new { @class = "font-bold" })
    @Html.TextBoxFor(x => x.DepartmentAd, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>