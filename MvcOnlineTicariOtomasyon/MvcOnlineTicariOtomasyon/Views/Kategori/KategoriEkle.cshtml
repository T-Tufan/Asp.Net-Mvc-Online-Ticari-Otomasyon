@model MvcOnlineTicariOtomasyon.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Kategori Ekle Sayfası</h2>
<br />
<form class="form-group" action="/Kategori/KategoriEkle" method="post">
    @Html.Label("Kategori Ad",new { @class = "font-bold" })
    @Html.TextBoxFor(x=>x.KategoriAd,new { @class = "form-control"})
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>